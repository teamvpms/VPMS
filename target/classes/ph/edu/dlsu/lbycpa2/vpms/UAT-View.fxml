<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10"
      stylesheets="@VPMS-style.css"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ph.edu.dlsu.lbycpa2.vpms.UserActionTrackingController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="User Action Tracking"
           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <TextField fx:id="txtAction" promptText="Describe recent action"/>

    <HBox spacing="10">
        <Button text="Push Action" fx:id="btnPush"/>
        <Button text="Undo (Pop)" fx:id="btnUndo"/>
    </HBox>

    <ListView fx:id="listStack" prefHeight="250"/>

</VBox>
