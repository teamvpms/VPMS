<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10"
      stylesheets="@VPMS-style.css"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ph.edu.dlsu.lbycpa2.vpms.RecordRetrievalController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Patient Record Retrieval (Hash Table)"
           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <TextField fx:id="txtKey" promptText="Enter patient ID"/>
        <TextField fx:id="txtRecord" promptText="Enter or update patient record"/>
    </HBox>

    <HBox spacing="10">
        <Button text="Insert Record" fx:id="btnInsert"/>
        <Button text="Retrieve Record" fx:id="btnRetrieve"/>
    </HBox>

    <ListView fx:id="listRecords" prefHeight="250"/>

</VBox>
