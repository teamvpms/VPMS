<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10"
      stylesheets="@VPMS-style.css"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ph.edu.dlsu.lbycpa2.vpms.controllers.ClosestRoomAssignmentController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Closest Room Assignment (Graph + Dijkstra)"
           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <TextField fx:id="txtStart" promptText="Enter starting room (e.g., ER-101)"/>
        <TextField fx:id="txtEnd" promptText="Enter destination room"/>
    </HBox>

    <Button text="Find Shortest Path" fx:id="btnFind"/>

    <ListView fx:id="listPath" prefHeight="250"/>

</VBox>
