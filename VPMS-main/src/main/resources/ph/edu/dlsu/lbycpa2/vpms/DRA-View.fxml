<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10"
      stylesheets="@VPMS-style.css"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ph.edu.dlsu.lbycpa2.vpms.controllers.DynamicResourceAllocationController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Dynamic Resource Allocation"
           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <Label text="Staff Name:"/>
        <ComboBox fx:id="cmbStaff" prefWidth="120" promptText="Staff" />

    </HBox>

    <HBox spacing="10">
        <Label text="Room Number:"/>
        <ComboBox fx:id="cmbRoom" prefWidth="120" promptText="Room no." />

    </HBox>

    <Button text="Assign" fx:id="btnAssign"/>

    <ListView fx:id="listAssignments" prefHeight="200"/>

</VBox>
